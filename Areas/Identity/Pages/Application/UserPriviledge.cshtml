@page
@model UserViewerModel
@{
}

    <form method="post">
        <table>
            <tr>
                <td style="text-align:center; width:@Math.Floor(100F/( Model.PossibleRoles.Count + 1))%;">Username</td>
                @foreach (String A in Model.PossibleRoles)
                {
                    <td style="text-align:center; width:@Math.Floor(100F/(Model.PossibleRoles.Count + 1))%;">@A</td>
                }
            </tr>
            @for(int i = 0; i < Model.MyData.Count(); i++) 
            {
                <tr>
                    <td style="text-align:center; width:@Math.Floor(100F/(Model.PossibleRoles.Count + 1))%;">
                        <label>@Model.MyData[i].UserName</label>
                    </td>
                    @for (int g = 0; g < Model.PossibleRoles.Count; g++)
                    {
                    <td style="text-align:center; width:@Math.Floor(100F/(Model.PossibleRoles.Count + 1))%;">
                        <input asp-for="@Model.MyData[i].myRoles[g]">
                        <input type="hidden" asp-for="MyData[i].UserName" />
                        <input type="hidden" asp-for="MyData[i].ID" />
                    </td>
                    }
                </tr>
            }
        </table>
        <button type="submit">Update Table!</button>
    </form>

