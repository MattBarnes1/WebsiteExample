@page
@model AddUserModel
@{
}

<form method="post">
    <table>
        <tr>
            <td><lable>Username</lable></td>
            <td><lable>Password</lable></td>
        </tr>
        <tr>
            <td><input asp-for="MyData.UserName" /></td>
            <td><input type="password" asp-for="MyData.UserPassword" /></td>
        </tr>
    </table>
    <table>
        <tr>
            @foreach (String A in Model.PossibleRoles)
            {
                <td style="text-align:center; width:@Math.Floor(100F/(Model.PossibleRoles.Count + 2))%;">@A</td>
            }
        </tr>
        <tr>
            @for (int i = 0; i < Model.PossibleRoles.Count; i++)
            {
                <td style="text-align:center;width:@Math.Floor(100F/(Model.PossibleRoles.Count + 2))%;"><input type="checkbox"  asp-for="MyData.UserRoles[i]" /></td>
            }
        </tr>
    </table>
    <input type="submit" />
    <label>@Model.Error</label>
</form>